{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:prettier/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "dot-notation": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "prettier/prettier": [
            "error",
            {
              "tabWidth": 2,
              "printWidth": 80,
              "useTabs": false,
              "semi": true,
              "singleQuote": true,
              "trailingComma": "all",
              "arrowParens": "avoid",
              "endOfLine": "lf"
            }
          ]
    }
}
